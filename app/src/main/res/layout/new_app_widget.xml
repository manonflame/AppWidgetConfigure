<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/appWidget"
    android:layout_width="match_parent"
    android:layout_height="222dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="vertical"


    >



    <ProgressBar
        android:id="@+id/getAPIprogress"
        android:indeterminateTint="#fa5a44"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:id="@+id/ranking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminateTint="#fa5a44"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="17dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/configure"
                        android:layout_width="15dp"
                        android:layout_height="17dp"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/ic_launcher"

                        />

                    <Button
                        android:id="@+id/refresh"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@android:drawable/stat_notify_sync_noanim"

                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="실시간 검색어"
                        android:textColor="#000000"
                        android:textSize="14.2sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:background="#000000">

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#FF1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="#00ff00">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="1"
                        android:textColor="#fa5a44"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/firstWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:background="#0FF"
                        android:text="temporarytest" />


                </LinearLayout>

                <TextView
                    android:id="@+id/linefirst"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_toRightOf="@id/linefirst"
                    android:background="#00ff00">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="6"
                        android:textColor="#959da6"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/sixthWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:background="#0FF"
                        android:text="temporarytest" />


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="15.5dp"
                android:background="#FF1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="#00ff00">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="2"
                        android:textColor="#fa5a44"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/secondWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:background="#0FF"
                        android:text="temporarytest" />


                </LinearLayout>

                <TextView
                    android:id="@+id/linesecond"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_toRightOf="@id/linesecond"
                    android:background="#00ff00">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="7"
                        android:textColor="#959da6"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/seventhWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:background="#0FF"
                        android:text="temporarytest" />


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="15.5dp"
                android:background="#FF1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="#00ff00">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="3"
                        android:textColor="#fa5a44"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/thirdWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:background="#0FF"
                        android:text="temporarytest" />


                </LinearLayout>

                <TextView
                    android:id="@+id/linethird"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_toRightOf="@id/linethird"
                    android:background="#00ff00">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="8"
                        android:textColor="#959da6"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/eighthWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:background="#0FF"
                        android:text="temporarytest" />


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="15.5dp"
                android:background="#FF1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="#00ff00">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="4"
                        android:textColor="#959da6"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/fourthWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:background="#0FF"
                        android:text="temporarytest" />


                </LinearLayout>

                <TextView
                    android:id="@+id/linefourth"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_toRightOf="@id/linefourth"
                    android:background="#00ff00">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="9"
                        android:textColor="#959da6"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/ninethWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:background="#0FF"
                        android:text="temporarytest" />


                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_marginTop="15.5dp"
                android:background="#FF1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="#00ff00">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="5"
                        android:textColor="#959da6"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/fifthWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:background="#0FF"
                        android:text="temporarytest" />


                </LinearLayout>

                <TextView
                    android:id="@+id/linefifth"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true">

                </TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_toRightOf="@id/linefifth"
                    android:background="#00ff00">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="10"
                        android:textColor="#959da6"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/tenthWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:background="#0FF"
                        android:text="temporarytest" />


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>